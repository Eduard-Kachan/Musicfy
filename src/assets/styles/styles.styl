
// -----------------------------
// Variables
// -----------------------------

gray = #555
lightColor = #efefef
darkColor = #333

  // -----------------------------
  // Global Styles
  // -----------------------------
*
  box-sizing border-box

body
  padding 0
  margin 0
  font-size 14px
  font-family sans-serif
  color gray

a
  text-decoration none
  display inline-block
  color gray

// -----------------------------
// App Specific
// -----------------------------

.header, .main, .footer
  width 100%
  display block
  clear both
  float left

// -----------------------------
// Header
// -----------------------------

.header
  padding 20px
  border-bottom 1px solid lightColor

// -----------------------------
// Navigation
// -----------------------------

.nav
  padding 0
  width 500px
  margin 0 auto

  li
    margin 0
    padding 0
    display inline-block
    list-style none
    width 49%

    a
      width 100%
      padding 5px 10px
      text-align center

// -----------------------------
// Main
// -----------------------------

.wrapper
  width 900px
  display block
  margin 0 auto

.main
  width 600px
  margin 0 auto
  border-bottom 1px solid lightColor
  float left
  display inline-block
  overflow hidden

.title
  display block
  width 100%
  float left

h2.title
  display block
  float left
  width 600px
  padding-left 20px
  margin 0


// -----------------------------
// Home
// -----------------------------

h1.title
  padding 19px
  padding-left 10
  margin-top 0
  background rgba(1,1,1,0.5)

.songsFeatured
  list-style none

  li
    background rgba(1,1,1,0.5)
    display inline-block
    margin-left 5px
    margin-bottom 5px

    span
      display block
      margin-left 60px
      margin-top -31px
      margin-bottom 15px
      margin-right 10px

    span:hover
      cursor pointer

    img
      width 50px
      display block


// -----------------------------
// Artists
// -----------------------------

.artists
  list-style none

  div
    display inline-block
    background rgba(1,1,1,0.5)
    position relative

    img
      width 100px
      display block

    h3
      display block
      margin 4px 10px

    a
      position absolute
      width 100%
      height 100%

// -----------------------------
// Albums
// -----------------------------

.ufkhb
  list-style none
  li
    background rgba(1,1,1,0.5)
    display inline-block

    img
      width 50px
      display block
      float left

    h3
      display block
      float left
      margin-left 10px
      margin-right 10px




