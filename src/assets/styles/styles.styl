
// -----------------------------
// Variables
// -----------------------------

gray = #555
lightColor = #efefef
darkColor = #333

  // -----------------------------
  // Global Styles
  // -----------------------------
*
  box-sizing border-box

body
  padding 0
  margin 0
  font-size 14px
  font-family sans-serif
  color gray

a
  text-decoration none
  display inline-block
  color gray

// -----------------------------
// App Specific
// -----------------------------

.header, .main, .footer
  width 100%
  display block
  clear both
  float left

// -----------------------------
// Header
// -----------------------------

.header
  padding 20px
  border-bottom 1px solid lightColor

// -----------------------------
// Navigation
// -----------------------------

.nav
  padding 0
  width 500px
  margin 0 auto

  li
    margin 0
    padding 0
    display inline-block
    list-style none
    width 49%

    a
      width 100%
      padding 5px 10px
      text-align center

// -----------------------------
// Main
// -----------------------------

.main
  width 900px
  margin 0 auto
  border-bottom 1px solid lightColor
  float none
  overflow hidden

.title
  display block
  width 100%
  float left

h2.title
  display block
  float left
  width 600px
  padding-left 20px
  margin 0

.artistPic
  width 300px
  height 300px
  float left

.albums, .songs
  display block
  list-style none
  float left
  margin: 0
  img
    width 50px
    height 50px
    display inline-block
  h3
    display inline-block
    margin 0
    transform translateY(-18px)
    font-size 22px

.artists
  div
    display inline-block
    width 200px
    height 200px
    margin-left 20px
    margin-bottom  20px
    background-color gray
    position relative

    img
      width 100%
      height 100%

    a
      position absolute
      width 100%
      height 100%

    h3
      color white
      transform translateY(-35px) translateX(-2px)

// -----------------------------
// Footer
// -----------------------------

.footer
  padding 20px

  p
    margin 0
    padding 0
    font-size 12px

#jquery_jplayer_N.jp-jplayer
  display none

#jp_container_N
  margin 0 auto

.jp-video-270p
  width 100%
