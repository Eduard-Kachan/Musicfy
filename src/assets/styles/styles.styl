  background rgba(1,1,1,0.5)

  h1
    display block
    float left
    margin 18px 20px
  img
    width 70px
    display block
    float left

// -----------------------------
// Albums
// -----------------------------

.album
  h1
    font-size 25px

.songs
  list-style none
  li
    display inline-block
    background rgba(1,1,1,0.5)
    margin 5px
    padding 5px

    span:hover
      cursor pointer





